import tkinter as tk
import time
import random

class ColorfulNamePrinter:
    def __init__(self, master):
        self.master = master
        master.title("Colorful Name Printer")

        self.canvas = tk.Canvas(master, width=400, height=100, bg="white")
        self.canvas.pack(pady=20)

        self.entry = tk.Entry(master, font=("Arial", 14))
        self.entry.pack(pady=10)
        self.entry.insert(0,"your name")

        self.print_button = tk.Button(master, text="Print Name", command=self.print_name)
        self.print_button.pack(pady=10)

    def print_name(self):
        self.canvas.delete("all")  # Clear previous text
        name = self.entry.get()
        x, y = 20, 50

        for char in name:
            color = f"#{random.randint(0, 0xFFFFFF):06x}"  # Random color
            self.canvas.create_text(x, y, text=char, font=("Arial", 24, "bold"), fill=color)
            x += 20  # Move to the next position
            self.canvas.update()
            time.sleep(0.5)  # Delay between letters

root = tk.Tk()
app = ColorfulNamePrinter(root)
root.mainloop()
